<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".travel.WeatherTravelPlan">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/coloured_background"
        tools:layout_editor_absoluteX="0dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttondesign">


        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/back"></ImageView>

        <RelativeLayout
            android:layout_below="@+id/backIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstLocation_transit"
            >
        <TextView
            android:id="@+id/firstLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:text="Weather conditions for first location:"
            android:textColor="@color/white"
            android:textSize="16dp" />


            <TextView
                android:id="@+id/cityTransit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstLocation"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="City/town"
                android:textColor="@color/bright_orange"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/weatherConditionTransit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temperatureTransit"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="weather condition: -"
                android:textColor="@color/bright_orange"
                android:textSize="17dp" />

        <TextView
            android:id="@+id/temperatureTransit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cityTransit"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/poppins"
            android:text="temperature: -°C"
            android:textColor="@color/bright_orange"
            android:textSize="17dp"

            />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/secondlocation_transit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstLocation_transit"
            android:layout_marginTop="40dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/secondlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="Weather conditions for second location:"
                android:textColor="@color/white"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/cityTransit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondlocation"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="City/town"
                android:textColor="@color/bright_orange"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/weatherConditionTransit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temperatureTransit1"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/poppins"
                android:text="weather condition: -"
                android:textColor="@color/bright_orange"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/temperatureTransit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityTransit1"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="temperature: -°C"
                android:textColor="@color/bright_orange"
                android:textSize="17dp"

                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/thirdlocation_transit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/secondlocation_transit"
            android:layout_marginTop="40dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/thirdlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="Weather conditions for third location:"
                android:textColor="@color/white"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/cityTransit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thirdlocation"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="City/town"
                android:textColor="@color/bright_orange"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/weatherConditionTransit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temperatureTransit2"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="weather condition: -"
                android:textColor="@color/bright_orange"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/temperatureTransit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityTransit2"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="temperature: -°C"
                android:textColor="@color/bright_orange"
                android:textSize="17dp"

                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/fourthlocation_transit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/thirdlocation_transit"
            android:layout_marginTop="10dp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/fourthlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="Weather conditions for fourth location:"
                android:textColor="@color/white"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/cityTransit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fourthlocation"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="City/town"
                android:textColor="@color/bright_orange"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/weatherConditionTransit13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temperatureTransit3"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="weather condition: -"
                android:textColor="@color/bright_orange"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/temperatureTransit3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityTransit3"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="temperature: -°C"
                android:textColor="@color/bright_orange"
                android:textSize="17dp"

                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fifthlocation_transit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fourthlocation_transit"
            android:visibility="invisible"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/fifthlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="Weather conditions for fifth location:"
                android:textColor="@color/white"
                android:textSize="16dp" />


            <TextView
                android:id="@+id/cityTransit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fifthlocation"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="City/town"
                android:textColor="@color/bright_orange"
                android:textSize="17dp" />


            <TextView
                android:id="@+id/weatherConditionTransit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/temperatureTransit4"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="weather condition: -"
                android:textColor="@color/bright_orange"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/temperatureTransit4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cityTransit4"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins"
                android:text="temperature: -°C"
                android:textColor="@color/bright_orange"
                android:textSize="17dp"

                />


        </RelativeLayout>







    </RelativeLayout>
    </ScrollView>
</RelativeLayout>