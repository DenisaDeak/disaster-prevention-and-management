<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <RadioButton
            android:id="@+id/topic1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/textview_border"
            style= "@style/Widget.Material3.CompoundButton.RadioButton"
            android:fontFamily="@font/poppins"
            android:text="Floods"
            android:textAlignment="center"
            android:textColor="#2E2E2E"
            android:textSize="12dp" />
        <RadioButton
            android:id="@+id/topic2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/textview_border"
            style= "@style/Widget.Material3.CompoundButton.RadioButton"
            android:fontFamily="@font/poppins"
            android:text="Tornadoes"
            android:textAlignment="center"
            android:textColor="#2E2E2E"
            android:textSize="12dp" />
        <RadioButton
            android:id="@+id/topic3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/textview_border"
            style= "@style/Widget.Material3.CompoundButton.RadioButton"
            android:fontFamily="@font/poppins"
            android:text="Earthquakes"
            android:textAlignment="center"
            android:textColor="#2E2E2E"
            android:textSize="12dp" />
        <RadioButton
            android:id="@+id/topic4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/textview_border"
            style= "@style/Widget.Material3.CompoundButton.RadioButton"
            android:fontFamily="@font/poppins"
            android:text="Thunderstorms"
            android:textAlignment="center"
            android:textColor="#2E2E2E"
            android:textSize="12dp" />
        <RadioButton
            android:id="@+id/topic5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/textview_border"
            style= "@style/Widget.Material3.CompoundButton.RadioButton"
            android:fontFamily="@font/poppins"
            android:text="Extreme heat"
            android:textAlignment="center"
            android:textColor="#2E2E2E"
            android:textSize="12dp" />
        <RadioButton
            android:id="@+id/topic6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/textview_border"
            style= "@style/Widget.Material3.CompoundButton.RadioButton"
            android:fontFamily="@font/poppins"
            android:text="Blizzards"
            android:textAlignment="center"
            android:textColor="#2E2E2E"
            android:textSize="12dp" />
        <RadioButton
            android:id="@+id/topic7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/textview_border"
            style= "@style/Widget.Material3.CompoundButton.RadioButton"
            android:fontFamily="@font/poppins"
            android:text="Wildfires"
            android:textAlignment="center"
            android:textColor="#2E2E2E"
            android:textSize="12dp" />
        <RadioButton
            android:id="@+id/topic8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/textview_border"
            style= "@style/Widget.Material3.CompoundButton.RadioButton"
            android:fontFamily="@font/poppins"
            android:text="Hurricanes"
            android:textAlignment="center"
            android:textColor="#2E2E2E"
            android:textSize="12dp" />

    </RadioGroup>
</LinearLayout>